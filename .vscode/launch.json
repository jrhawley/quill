    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'quill'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=quill",
                    "--package=quill"
                ],
                "filter": {
                    "name": "quill",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'quill'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=quill",
                    "--package=quill"
                ],
                "filter": {
                    "name": "quill",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in 'quill-statement`",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=quill_statement"
                ]
            },
            "args": [],
            "cwd": "${workspaceFolder}/quill-statement"
        }
    ]
}